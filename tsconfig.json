{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src",
    "types"
  ]
}